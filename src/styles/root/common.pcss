.mu-root {
  font-family:
    system-ui, 
    -apple-system,
    BlinkMacSystemFont,
    "PingFang SC",
    "Hiragino Sans GB",
    "Microsoft YaHei",
    "Helvetica Neue",
    Helvetica,
    Arial,
    sans-serif;

  font-size: $rootFontSize;
  color: var(--mu-text-color-normal);

  --mu-unit-spacing-size: $unitSpacingSize;
}
